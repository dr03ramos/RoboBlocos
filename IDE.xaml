<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="RoboBlocos.IDE"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RoboBlocos"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="IDE">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TitleBar x:Name="IDETitleBar"
                  Grid.Row="0"
                  Title="RoboBlocos"
                  IsBackButtonVisible="True"
                  BackRequested="NavViewTitleBar_BackRequested"/>

        <Grid Grid.Row="1" Height="44" VerticalAlignment="Center" Margin="15,4,0,4" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                <TextBlock x:Name="txtProgramName" VerticalAlignment="Center" FontSize="16" FontWeight="SemiBold">Programa 1</TextBlock>
                <Button x:Name="RenameProjectButton" Click="RenameProjectButton_Click" ToolTipService.ToolTip="Renomear projeto" Margin="8,0,0,0" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon Glyph="&#xE70F;" />
                        <TextBlock Text="Renomear" />
                    </StackPanel>
                </Button>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Spacing="8">
                <CommandBar Background="Transparent" IsOpen="False" DefaultLabelPosition="Right">
                    <AppBarButton Icon="Download" Label="Exportar"/>
                    <AppBarButton Icon="Help" Label="Tutoriais">
                    </AppBarButton>
                </CommandBar>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="15" />
                <ColumnDefinition Width="350" />
            </Grid.ColumnDefinitions>

            <WebView2 x:Name="MyWebView2"
                      Grid.Column="0"
                      Source="https://example.com/"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      MinHeight="400"
                      MinWidth="400" />

            <Grid Grid.Column="2" Margin="0,0,8,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" VerticalAlignment="Bottom" Spacing="8">
                    <controls:InfoBar
                        IsOpen="True"
                        IsIconVisible="True"
                        IsClosable="False"
                        Severity="Informational"
                        Message="Download de firmware iniciado...                                  RCX 2.0 na porta COM3"/>

                    <controls:InfoBar
                        IsOpen="True"
                        IsIconVisible="True"
                        IsClosable="False"
                        Severity="Success"
                        Message="Download de firmware concluído com sucesso." />

                    <controls:InfoBar
                        IsOpen="True"
                        IsIconVisible="True"
                        IsClosable="False"
                        Severity="Success"
                        Message="Compilação concluída às 21:38." />

                    <controls:InfoBar
                        IsOpen="True"
                        IsIconVisible="True"
                        IsClosable="False"
                        Severity="Informational"
                        Message="Enviando programa compilado ao robô...                                  RCX 2.0 na porta COM3" />

                    <controls:InfoBar
                        IsOpen="True"
                        IsIconVisible="True"
                        IsClosable="False"
                        Severity="Error"
                        Message="Não foi possível enviar o programa ao robô. Tente colocar ele mais perto do sensor." />
                </StackPanel>

                <StackPanel Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Spacing="12" Margin="0,24,0,0">
                    <Button x:Name="SaveProgramButton" ToolTipService.ToolTip="Salvar programa no computador" HorizontalAlignment="Right" Click="SaveProgramButton_Click">
                        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE74E;" />
                            <TextBlock Text="Salvar programa" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <Button x:Name="RobotSettingsButton" ToolTipService.ToolTip="Configurações específicas do robô" HorizontalAlignment="Right" Click="RobotSettingsButton_Click">
                        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE713;" />
                            <TextBlock Text="Configurações do robô" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    
                    <Button ToolTipService.ToolTip="Enviar programa para o robô" HorizontalAlignment="Right" Style="{StaticResource AccentButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE724;" />
                            <TextBlock Text="Enviar para o robô" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
