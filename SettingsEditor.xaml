<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="RoboBlocos.SettingsEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RoboBlocos"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Configurações"
    PrimaryButtonText="OK"
    SecondaryButtonText="Cancelar"
    DefaultButton="Primary"
    Style="{StaticResource DefaultContentDialogStyle}">

    <ScrollViewer MaxHeight="500" MaxWidth="1300">
        <Grid Margin="0,15,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column - Robot Settings Only -->
            <StackPanel Grid.Column="0" Orientation="Vertical" Spacing="20">
                <StackPanel Orientation="Vertical" Spacing="12">
                    <TextBlock Text="Definições do robô" FontSize="16" FontWeight="SemiBold" />

                    <ComboBox x:Name="cmbModel" Header="Modelo" Width="160" SelectedIndex="0" HorizontalAlignment="Left">
                        <ComboBoxItem>RCX2</ComboBoxItem>
                    </ComboBox>

                    <RadioButtons Header="Versão do firmware">
                        <RadioButton x:Name="rbRecommended" GroupName="FirmwareOption" IsChecked="True" Content="Usar recomendada (firm0332.lgo)" />
                        <RadioButton x:Name="rbChooseFile" GroupName="FirmwareOption" Content="Escolher arquivo" />
                    </RadioButtons>
                    <TextBox x:Name="txtCustomFirmware" 
                             IsEnabled="{Binding IsChecked, ElementName=rbChooseFile}" 
                             PlaceholderText="C:\Usuários\..." 
                             Width="200" 
                             Margin="28,0,0,0" 
                             HorizontalAlignment="Left" />
                </StackPanel>
            </StackPanel>

            <!-- Right Column - Connection and Logging Settings -->
            <StackPanel Grid.Column="2" Orientation="Vertical" Spacing="20">
                <!-- Connection Settings Section -->
                <StackPanel Orientation="Vertical" Spacing="12">
                    <TextBlock Text="Conexão" FontSize="16" FontWeight="SemiBold" />

                    <TextBox x:Name="txtSerialPort" Header="Porta serial" Width="200" Text="COM1" HorizontalAlignment="Left" />

                    <NumberBox x:Name="numConnectionAttempts" 
                               Header="Tentativas de conexão" 
                               Value="5" 
                               Minimum="0" 
                               Maximum="99" 
                               Width="150" 
                               HorizontalAlignment="Left"/>
                </StackPanel>

                <!-- Logging Settings Section -->
                <StackPanel Orientation="Vertical" Spacing="12">
                    <TextBlock Text="Registros" FontSize="16" FontWeight="SemiBold" />

                    <CheckBox x:Name="chkLogMandatory" Content="Obrigatórios" IsEnabled="False" />
                    <CheckBox x:Name="chkLogFirmware" Content="Download de firmware" />
                    <CheckBox x:Name="chkLogInterface" Content="Informações da interface" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</ContentDialog>
